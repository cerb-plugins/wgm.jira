<fieldset style="margin-top:5px;">
	<b>Base URL to JIRA Installation:</b><br>
	<input type="text" name="base_url" value="{$params.base_url}" size="64" placeholder="e.g. https://example.atlassian.net"><br>
	<br>
	<b>JIRA User:</b><br>
	<input type="text" name="jira_user" value="{$params.jira_user}" size="64" placeholder="e.g. Cerb"><br>
	<br>
	<b>Password:</b><br>
	<input type="password" name="jira_password" value="{$params.jira_password}" size="32"><br>
	<br>
</fieldset>